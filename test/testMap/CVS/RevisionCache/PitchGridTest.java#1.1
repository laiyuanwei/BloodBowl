package testMap;

import bloodbowl.model.map.Cell;
import bloodbowl.model.map.PitchGrid;
import junit.framework.Assert;
import junit.framework.TestCase;

/**
 *
 * @author Yuanwei Lai
 */
public class PitchGridTest extends TestCase {
    private PitchGrid pitchgrid=null;
    private Cell cell=null;
    
    public PitchGridTest(String testName) {
        super(testName);
    }

    @Override
    protected void setUp() throws Exception {
        super.setUp();
        pitchgrid= new PitchGrid();
        cell= new Cell(14,25);
    }

    @Override
    protected void tearDown() throws Exception {
        super.tearDown();
    }


    /**
     * Test of getCell method, of class PitchGrid.
     */
    public void testGetCell() {
       Assert.assertEquals(cell.getColumn(), pitchgrid.getCell(14,25).getColumn());
       Assert.assertEquals(cell.getRow(),pitchgrid.getCell(14, 25).getRow());
    }
}
